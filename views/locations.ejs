<%if (auth=='600c0f0fbc4b391f0135065e') { %>
    <div class="editPost">
        <a href="/new-location-<%= stateName %>-<%= stateId %>" ><i class="fa fa-plus"></i></a>
        <a href="/get-state-<%= stateName %>-<%= stateId %>" ><i class="fa fa-pencil-square-o"></i></a>
        <a href="/delete-state-<%= stateName %>-<%= stateId %>" onclick="return confirm('Are you sure you want to delete this post?');"><i class="fa fa-trash"></i></a>
    </div>
    <br><br>
<% } %>

<section id="portfolio" class="section-padding wow fadeInUp delay-05s">
    <div class="container">
        <div class="row">
            <div class="col-md-12 text-center">
                <h2 class="service-title pad-bt15">Choose Your Destination</h2>
                <!-- <p class="sub-title pad-bt15">Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod<br>tempor incididunt ut labore et dolore magna aliqua.</p> -->
                <hr class="bottom-line">
            </div>
            <% for(var i=0;i < location.length; i++) { %>
                <div class="col-md-4 col-sm-6 col-xs-12 padding-right-zero mr-btn-15">
                    <figure>
                        <img src="<%- location[i].image %>" class="img-responsive">
                        <figcaption>
                            <a href="/<%= stateName %>-<%- location[i].name %>-all-travelPosts-<%- location[i]._id %>"><h2 style="text-align: center;"><%- location[i].name %></h2></a>
                            <p><%- location[i].content %></p>
                        </figcaption>
                    </figure>
                </div>
            <% } %>
        </div>
        <iframe width="100%" height="400" id="gmap_canvas" src="<%- map.map %>" frameborder="0" scrolling="no" marginheight="0" marginwidth="0"></iframe>
    </div>
</section>