<!-- Page Header -->
<header class="masthead">
    <div class="overlay"></div>
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-md-10 mx-auto">
                <div class="page-heading">
                <h1>Update Location</h1>
                </div>
            </div>
        </div>
    </div>
    </header>
    
    <div class="container">
        <div class="row">
            <div class="col-md-8 offset-md-2">
                <form action="/location/update-<%= stateName %>-<%= locationName %>-<%- location._id %>" method="POST" encType="multipart/form-data">
                    <div class="control-group">
                        <div class="form-group floating-label-form-group controls">
                            <label>Username</label>
                            <input type="text" name="username" placeholder="Username" class="form-control" value="<%- location.username %>">
                        </div>
                    </div>
                    <div class="control-group">
                        <div class="form-group floating-label-form-group controls">
                            <label>Location Name</label>
                            <input type="text" name="name" placeholder="Location Name" class="form-control" value="<%- location.name %>">
                        </div>
                    </div>
                    <div class="control-group">
                        <div class="form-group floating-label-form-group controls">
                            <label>Image Url</label>
                            <input type="text" name="image" placeholder="Image Url" class="form-control" value="<%- location.image %>">
                        </div>
                    </div>
                    <div class="control-group">
                        <div class="form-group floating-label-form-group controls">
                            <label>Content</label>
                            <textarea name="content" placeholder="Content ..." cols="30" rows="10" class="form-control"><%- location.content %></textarea>
                        </div>
                    </div>
                    <div class="form-group my-4 text-center">
                        <button class="btn btn-primary">Update Location</button>
                    </div>
                </form>
            </div>
        </div>
    </div>