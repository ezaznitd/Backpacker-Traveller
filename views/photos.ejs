
<%if (auth=='600c0f0fbc4b391f0135065e') { %>
    <div class="editPost">
        <a href="/new/photo/" ><i class="fa fa-plus"></i></a>
    </div>
    <br><br>
<% } %>

<section id="portfolio" class="section-padding wow fadeInUp delay-05s">
    <div class="container">
        <div class="row">
            <div class="col-md-12 text-center">
                <h2 class="service-title pad-bt15">Our Recent Works</h2>
                <p class="sub-title pad-bt15">Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod<br>tempor incididunt ut labore et dolore magna aliqua.</p>
                <hr class="bottom-line">
            </div>
            <% for(var i=0;i < photos.length; i++) { %>
                <div class="col-md-4 col-sm-6 col-xs-12 portfolio-item padding-right-zero mr-btn-15">
                    <figure>
                        <img src="<%= photos[i].image %>" class="img-responsive">
                        <figcaption>
                            <%if (auth=='600c0f0fbc4b391f0135065e') { %>
                                <div class="editPost">
                                    <a href="/get/photo/<%= photos[i]._id %>/" ><i class="fa fa-pencil-square-o"></i></a>
                                    <a href="/delete/photo/<%= photos[i]._id %>/" onclick="return confirm('Are you sure you want to delete this post?');"><i class="fa fa-trash"></i></a>
                                </div>
                                <br><br>
                            <% } %>
                            <h2><%- photos[i].title %></h2>
                            <p><%- photos[i].content %></p>
                        </figcaption>
                    </figure> 
                </div>
            <% } %>
        </div>
    </div>
</section>

<div class="container-fluid pb-4 pt-5">
    <div class="container animate-box">
        <div>
            <div class="fh5co_heading fh5co_heading_border_bottom py-2 mb-4">Recent Travel Story</div>
        </div>
        <div class="owl-carousel owl-theme" id="slider2">
            <% for(var i=0; i < Math.min(lastModified.length, 6); i++) { %>
                <div class="item px-2">
                    <div class="fh5co_hover_news_img">
                        <div class="fh5co_news_img"><img src="<%- lastModified[i].image %>" alt=""/></div>
                        <div>
                            <a href="/post/<%- lastModified[i].postType %>/<%- lastModified[i].slug %>/<%- lastModified[i]._id %>/" class="d-block fh5co_small_post_heading"><span class=""><%- lastModified[i].title %></span></a>
                            <div class="c_g"><i class="fa fa-clock-o"></i> <%- lastModified[i].createdAt.toDateString() %></div>
                        </div>
                    </div>
                </div>
            <% } %>
        </div>
    </div>
</div>

