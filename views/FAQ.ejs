<section id="portfolio" class="section-padding wow fadeInUp delay-05s FAQ">
    <div class="container">
		<%if (success.length > 0) { %>
            <div class="alert alert-success alert-dismissible message" style="text-align: center;">
                <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                <strong>Congratulations!</strong> <%- success %>
            </div>
        <% } else if (warning.length > 0) { %>
            <div class="alert alert-warning alert-dismissible message" style="text-align: center;">
                <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                <strong>Warning!</strong> <%- warning %>
            </div>
        <% } else if (danger.length > 0) { %>
            <div class="alert alert-danger alert-dismissible message">
                <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                <strong>Danger!</strong> <%- danger %>
            </div>
        <% } else if (info.length > 0) { %>
            <div class="alert alert-info alert-dismissible message" style="text-align: center;">
                <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                <strong>Info!</strong> <%- info %>
            </div>
        <% } %>
        <div class="row">
            <div class="col-md-12 text-center">
                <h2 class="service-title pad-bt15">FAQ</h2>
                <hr class="bottom-line">
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12">
				<% for(var i=0; i < faq.length; i++) { %>
					<button class="accordion"><%- faq[i].question%></button>
					<div class="panel">
						<p><%- faq[i].content%></p>
					</div>
				<% } %>
				<script>
					var acc = document.getElementsByClassName("accordion");
					var i;

					for (i = 0; i < acc.length; i++) {
						acc[i].addEventListener("click", function() {
							this.classList.toggle("active");
							var panel = this.nextElementSibling;
							if (panel.style.maxHeight) {
								panel.style.maxHeight = null;
							} else {
								panel.style.maxHeight = panel.scrollHeight + "px";
							} 
						});
					}
				</script>
            </div>
        </div>
    </div>
</section>

<hr>